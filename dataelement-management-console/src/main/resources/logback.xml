<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <!--  Jmx Setting
  <include resource="org/springframework/boot/logging/logback/base.xml"/>
  <jmxConfigurator/>
  -->
  <!-- <include resource="org/springframework/boot/logging/logback/base.xml"/>-->
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <!-- Log message format -->
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>
  <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
	  <file>dsp-dataelement-console.log</file>
	  <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
	    <!-- daily rollover -->
	    <FileNamePattern>dsp-dataelement-console.%d{yyyy-MM-dd}.log</FileNamePattern>
	    <!-- keep 30 days' worth of history -->
	    <maxHistory>30</maxHistory>
          <!--<totalSizeCap>4G</totalSizeCap>-->
	  </rollingPolicy>
      <!--<triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
          &lt;!&ndash;每个日志文件最大100MB&ndash;&gt;
          <maxFileSize>100MB</maxFileSize>
      </triggeringPolicy>-->
	  <encoder>
	    <Pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{35} - %msg %n</Pattern>
	  </encoder>
  </appender>
  <!-- Ned appender to write to file
  <appender name="FILE" class="ch.qos.logback.core.FileAppender">
    <file>gconsole.log</file>
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>
  -->
  <logger name="com.igap.data.license" level="WARN">
    <appender-ref ref="FILE" />
  </logger>
  <logger name="org.mybatis" level="DEBUG">
    <appender-ref ref="STDOUT" />
  </logger>
  <logger name="java.sql.Statement" level="DEBUG" />
  <logger name="java.sql.PreparedStatement" level="DEBUG" />

  <logger name="org.springframework" level="info" />

  <!-- Setting the root level of logging to INFO -->
  <root level="INFO">
    <appender-ref ref="STDOUT" />
    <appender-ref ref="FILE" />
  </root>
</configuration>
