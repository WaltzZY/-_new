<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.inspur.dsp.direct.dao.NegotiationRecordMapper">
  <resultMap id="BaseResultMap" type="com.inspur.dsp.direct.dbentity.NegotiationRecord">
    <!--@mbg.generated-->
    <!--@Table negotiation_record-->
    <id column="record_id" jdbcType="VARCHAR" property="recordId" />
    <result column="base_dataelement_dataid" jdbcType="VARCHAR" property="baseDataelementDataid" />
    <result column="send_date" jdbcType="TIMESTAMP" property="sendDate" />
    <result column="sender_account" jdbcType="VARCHAR" property="senderAccount" />
    <result column="sender_name" jdbcType="VARCHAR" property="senderName" />
    <result column="negotiation_content" jdbcType="LONGVARCHAR" property="negotiationContent" />
    <collection property="negotiationRecordDetailList" ofType="com.inspur.dsp.direct.dbentity.NegotiationRecordDetail"
                javaType="list" column="record_id" select="selectAllNegotiationRecordDetailListByRecordId"/>
  </resultMap>

  <resultMap id="NegotiationRecordDetailResultMap" type="com.inspur.dsp.direct.dbentity.NegotiationRecordDetail">
    <!--@mbg.generated-->
    <!--@Table negotiation_record_detail-->
    <id column="record_detail_id" jdbcType="VARCHAR" property="recordDetailId" />
    <result column="record_id" jdbcType="VARCHAR" property="recordId" />
    <result column="negotiation_unit_code" jdbcType="VARCHAR" property="negotiationUnitCode" />
    <result column="negotiation_unit_name" jdbcType="VARCHAR" property="negotiationUnitName" />
    <result column="negotiation_result" jdbcType="LONGVARCHAR" property="negotiationResult" />
    <result column="recorder_account" jdbcType="VARCHAR" property="recorderAccount" />
    <result column="recorder_name" jdbcType="VARCHAR" property="recorderName" />
    <result column="result_date" jdbcType="TIMESTAMP" property="resultDate" />
  </resultMap>
  <sql id="Base_Column_List">
    <!--@mbg.generated-->
    record_id, base_dataelement_dataid, send_date, sender_account, sender_name, negotiation_content
  </sql>

  <select id="selectById" resultMap="BaseResultMap">
    select <include refid="Base_Column_List" />
    from negotiation_record
    where record_id = #{id}
  </select>

  <select id="selectAllNegotiationRecordDetailListByRecordId" resultMap="NegotiationRecordDetailResultMap">
    select record_detail_id, record_id, negotiation_unit_code, negotiation_unit_name, negotiation_result,
    recorder_account, recorder_name, result_date
    from negotiation_record_detail
    where record_id = #{recordId}
  </select>

  <insert id="insertSelectiveDetail">
    INSERT INTO negotiation_record_detail (record_detail_id, record_id, negotiation_unit_code, negotiation_unit_name,
    negotiation_result, recorder_account, recorder_name, result_date)
    VALUES
    <foreach collection="negotiationRecordDetailList" item="detail" separator=",">
      (#{detail.recordDetailId,jdbcType=VARCHAR}, #{detail.recordId,jdbcType=VARCHAR}, #{detail.negotiationUnitCode,jdbcType=VARCHAR},
      #{detail.negotiationUnitName,jdbcType=VARCHAR}, #{detail.negotiationResult,jdbcType=LONGVARCHAR},
      #{detail.recorderAccount,jdbcType=VARCHAR}, #{detail.recorderName,jdbcType=VARCHAR}, #{detail.resultDate})
    </foreach>
  </insert>

  <!--auto generated by MybatisCodeHelper on 2025-09-22-->
  <select id="selectFirstByBaseDataelementDataid" resultMap="BaseResultMap">
    select
    <include refid="Base_Column_List"/>
    from negotiation_record
    where base_dataelement_dataid=#{baseDataelementDataid,jdbcType=VARCHAR} limit 1
  </select>

  <!-- 协商数据元VO结果映射 -->
  <resultMap id="NegotiationDataElementVOMap" type="com.inspur.dsp.direct.entity.vo.NegotiationDataElementVO">
    <id column="dataid" jdbcType="VARCHAR" property="dataid"/>
    <result column="status" jdbcType="VARCHAR" property="status"/>
    <result column="name" jdbcType="VARCHAR" property="name"/>
    <result column="definition" jdbcType="LONGVARCHAR" property="definition"/>
    <result column="source_unit_code" jdbcType="VARCHAR" property="sourceUnitCode"/>
    <result column="source_unit_name" jdbcType="VARCHAR" property="sourceUnitName"/>
    <result column="send_date" jdbcType="TIMESTAMP" property="sendDate"/>
    <result column="confirm_date" jdbcType="TIMESTAMP" property="confirmDate"/>
    <result column="collectunitqty" jdbcType="INTEGER" property="collectunitqty"/>
  </resultMap>
  <!-- 查询待协商基准数据元列表 -->
  <select id="getNegotiationDataElementList" resultMap="NegotiationDataElementVOMap">
    SELECT
    bde.dataid,
    bde.status,
    bde.name,
    bde.definition,
    bde.source_unit_code,
    bde.source_unit_name,
    bde.send_date,
    bde.confirm_date,
    bde.collectunitqty
    FROM base_data_element bde
    <where>
      <if test="dto.statusList != null and dto.statusList.size() > 0">
        AND bde.status IN
        <foreach collection="dto.statusList" item="status" open="(" separator="," close=")">
          #{status}
        </foreach>
      </if>
      <if test="dto.sendDateBegin != null and dto.sendDateBegin != ''">
        AND bde.send_date &gt;= #{dto.sendDateBegin}
      </if>
      <if test="dto.sendDateEnd != null and dto.sendDateEnd != ''">
        AND bde.send_date &lt;= #{dto.sendDateEnd}
      </if>
      <if test="dto.keyword != null and dto.keyword != ''">
        AND (
        bde.name LIKE CONCAT('%', #{dto.keyword}, '%')
        OR bde.definition LIKE CONCAT('%', #{dto.keyword}, '%')
        )
      </if>
      <if test="dto.sourceUnitCodeList != null and dto.sourceUnitCodeList.size() > 0">
        AND bde.source_unit_code IN
        <foreach collection="dto.sourceUnitCodeList" item="unitCode" open="(" separator="," close=")">
          #{unitCode}
        </foreach>
      </if>
      <if test="dto.confirmDateBegin != null and dto.confirmDateBegin != ''">
        AND bde.confirm_date &gt;= #{dto.confirmDateBegin}
      </if>
      <if test="dto.confirmDateEnd != null and dto.confirmDateEnd != ''">
        AND bde.confirm_date &lt;= #{dto.confirmDateEnd}
      </if>
    </where>
    <if test="sortSql != null and sortSql != ''">
      order by ${sortSql}
    </if>
  </select>

  <select id="selectFirstByBaseDataelementDataidNotDetail" resultType="com.inspur.dsp.direct.dbentity.NegotiationRecord">
    select
    <include refid="Base_Column_List"/>
    from negotiation_record
    where base_dataelement_dataid=#{baseDataelementDataid,jdbcType=VARCHAR} limit 1
  </select>
</mapper>